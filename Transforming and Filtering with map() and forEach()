function evaluateEmployees(employees) {
  // 1. Filter employees who completed more than 5 tasks
  const filtered = employees.filter(function (emp) {
    return emp.tasksCompleted > 5;
  });

  // 2. Map to objects with name and performance level
  const evaluated = filtered.map(function (emp) {
    let performance;

    if (emp.rating > 4.5) {
      performance = "Excellent";
    } else if (emp.rating >= 3 && emp.rating <= 4.5) {
      performance = "Good";
    } else {
      performance = "Needs Improvement";
    }

    return {
      name: emp.name,
      performance: performance
    };
  });

  // 3. Sort by performance: Excellent > Good > Needs Improvement
  const priority = {
    "Excellent": 3,
    "Good": 2,
    "Needs Improvement": 1
  };

  evaluated.sort(function (a, b) {
    return priority[b.performance] - priority[a.performance];
  });

  // 4. Return final array
  return evaluated;
}

